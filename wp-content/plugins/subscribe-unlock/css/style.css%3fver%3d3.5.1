.subscribeunlock_errorbox {
	background: #FFE8E0 url(../images/failed01.png) 10px 5px no-repeat !important; 
	margin: 5px 0px !important; 
	padding: 5px 10px 5px 30px !important; 
	color: red !important; 
	font-size: 12px !important; 
	font-weight: bold !important; 
	text-align:left !important; 
	border: 1px dotted red !important;
	font-family: arial, verdana  !important;
	line-height: 16px !important;
}

.subscribeunlock_button {margin-top: 10px; margin-bottom: 10px;}

div.subscribeunlock_terms {
	height: 120px;
	overflow: scroll;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	-o-border-radius: 3px;
	-ms-border-radius: 3px;
	-khtml-border-radius: 3px;
	border-radius: 3px;
	border: 1px solid #CCC;
	line-height: 18px;
	font-size: 13px;
	font-family: arial;
	padding: 3px;
	margin-top: 5px;
}

.subscribeunlock_signup_form,
.subscribeunlock_confirmation_info {
	
	padding: 15px 15px;
	height:180px;
	
	color: #333;
	font-size: 13px;
	font-family: arial, verdana;
	background-color: #65a0a7;
	clear:both;
	margin-bottom:6px;
}

input.subscribeunlock_email,
input.subscribeunlock_name {

}
input.subscribeunlock_email {
	width: 100%;
}
input.subscribeunlock_name {
	width: 100%;
}

input. {
	
}
input.:hover{
	-moz-box-shadow: 0 1px 0 0 rgba(255, 255, 255, 0.6) inset;
	-webkit-box-shadow: 0 1px 0 0 rgba(255, 255, 255, 0.6) inset;
	-o-box-shadow: 0 1px 0 0 rgba(255, 255, 255, 0.6) inset;
	box-shadow: 0 1px 0 0 rgba(255, 255, 255, 0.6) inset;
}
img.subscribeunlock_loader {
	margin: 0px 0px 0px 10px !important;
	padding: 0px !important;
	background: transparent !important;
	border-width: 0px !important;
}
.subscribeunlock_error_message {
	display: block; 
	line-height: 24px; 
	background: #FBE3E4 url('../images/error.gif') no-repeat 10px 6px; 
	padding: 2px 10px 2px 35px; 
	color:#8a1f11;
	border: 1px solid #FBC2C4; 
	border-radius: 3px; 
	-moz-border-radius: 3px; 
	-webkit-border-radius:3px; 
	
	font-size: 13px;
	font-family: arial, verdana;
	clear:both;
}
ul.subscribeunlock_error_messages { margin: 0 0 0 15px !important; padding: 0; }
ul.subscribeunlock_error_messages li {line-height: 20px; color:#333; }

.subscribeunlock_invisible {display: none;}